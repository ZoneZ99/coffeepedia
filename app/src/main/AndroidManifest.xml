<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.farhanazyumardhiazmi.coffeepedia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".CoffeePediaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/coffeepedia_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/coffeepedia_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.CoffeeBeansActivity" />
        <activity android:name=".ui.activity.CoffeeBeanFormActivity" />
        <activity android:name=".ui.activity.CoffeeReviewsActivity" />
        <activity android:name=".ui.activity.BrewMethodsActivity" />
        <activity android:name=".ui.activity.BrewMethodFormActivity" />
        <activity android:name=".ui.activity.BrewRecipesActivity" />
        <activity android:name=".ui.activity.BrewRecipeFormActivity" />
        <activity android:name=".ui.activity.PermissionRationaleActivity" />
        <activity android:name=".ui.activity.AnimationActivity" />

        <service android:name=".service.CoffeeReviewScrapingService" />

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name=".provider.PdfProvider"
            android:authorities="id.ac.ui.cs.mobileprogramming.farhanazyumardhiazmi.coffeepedia.provider"
            android:exported="false" />
    </application>

</manifest>
